{
  "name": "trillo",
  "version": "1.0.0",
  "description": "trillo project",
  "main": "index.js",
  "scripts": {
    "watch:sass": "node-sass sass/main.scss css/styles.css -w",
    "devserver": "live-server",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass sass/main.scss css/styles.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/styles.comp.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/styles.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Hussnain Amjad",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.4.8",
    "live-server": "^1.2.2",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^10.0.0"
  }
}
